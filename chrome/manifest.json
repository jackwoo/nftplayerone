{
  "manifest_version": 2,
  "name": "Mintgle",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "this is a popup",
    "default_tooltip": "tip"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": ["content/jquery-2.1.4.js", "content/index.js"]
    }
  ],
  "background": {
    "scripts": ["background/index.js"]
  },
  "permissions": ["storage", "downloads", "webNavigation", "activeTab"],
  "optional_permissions": ["<all_urls>", "notifications", "clipboardRead"]
}
